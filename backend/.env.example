# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=travel_costs
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_database_password

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
BACKEND_URL=http://YOUR_SERVER_IP:3000
FRONTEND_URL=http://YOUR_SERVER_IP

# Google Maps API (REQUIRED)
# Get your API key from: https://console.cloud.google.com/google/maps-apis
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Amadeus Flight Search API (REQUIRED)
# Sign up at: https://developers.amadeus.com/
AMADEUS_API_KEY=your_amadeus_api_key
AMADEUS_API_SECRET=your_amadeus_api_secret

# TollGuru API (Optional - for toll calculations)
# Sign up at: https://tollguru.com/
TOLLGURU_API_KEY=your_tollguru_api_key
HERE_API_KEY=your_here_api_key

# Car Rental APIs (Optional - falls back to price ranges if not set)
RAPIDAPI_KEY=your_rapidapi_key
SERPAPI_KEY=your_serpapi_key
SERPER_API_KEY=your_serper_api_key

# AI Features (Optional)
GROQ_API_KEY=your_groq_api_key

# OpenRouteService API (FREE alternative to Google Maps)
# Sign up at: https://openrouteservice.org/dev/#/signup
# Free tier: 2,000 requests/day
OPENROUTESERVICE_API_KEY=your_openrouteservice_api_key

# File Paths (defaults work for most setups)
APPLUS_EXPORT_FOLDER=./data/exports
UPLOAD_FOLDER=./data/uploads
OUTPUT_FOLDER=./data/outputs
